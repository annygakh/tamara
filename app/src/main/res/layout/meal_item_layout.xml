<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    card_view:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Today"
                android:id="@+id/relativeDateTextView"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/main_title_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="October 30, 2016"
                android:id="@+id/absoluteDateTextView"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/secondary_title_color" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/item_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cat"/>

            <ImageView
                android:id="@+id/location_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_pic"
                android:layout_alignStart="@+id/item_pic"
                android:src="@android:drawable/ic_menu_compass"/>

            <ImageView
                android:id="@+id/edit_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_pic"
                android:layout_alignEnd="@+id/item_pic"
                android:src="@android:drawable/ic_menu_edit"/>


        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:columnCount="2"
            android:layout_gravity="left|top">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Contains: "
                android:id="@+id/containsTextView"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_gravity="left|top" />

        </GridLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>